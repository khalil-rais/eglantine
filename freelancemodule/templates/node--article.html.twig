							{% endfor %}
						</div>
					</div>
				{% endif %}    
				
				<div class="sidebar-box">
					<h3>{{ 'Our products'|trans }}</h3>
					<div class="sidebar-product">
						<div class="product-box">
							<div class="owl-carousel" id="sidebar-product-post">
